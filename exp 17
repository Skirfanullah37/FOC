#include <stdio.h>

int main() {
    int number, digit, reverse = 0;

    printf("Enter an integer number: ");
    scanf("%d", &number);

    printf("Digits of the number in reverse order: ");
    while (number != 0) {
        digit = number % 10; // Get the last digit
        printf("%d ", digit);
        number /= 10; // Remove the last digit
    }

    return 0;
}
