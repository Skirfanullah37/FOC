#include <stdio.h>

int calculateSeriesSum(int n) {
    int sum = 0, i;
    for (i = 2; i <= n; i += 2) {
        sum += i * i;
    }
    return sum;
}

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    int seriesSum = calculateSeriesSum(n);

    printf("Sum of the series 2^2 + 4^2 + 6^2 + 8^2 + ... + %d^2 = %d\n", n, seriesSum);

    return 0;
}
