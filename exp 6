#include <stdio.h>

int calculateEvenSeriesSum(int n) {
    int sum = 0, i;
    for (i = 2; i <= n; i += 2) {
        sum += i;
    }
    return sum;
}

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    int evenSeriesSum = calculateEvenSeriesSum(n);

    printf("Sum of the even number series from 2 to %d = %d\n", n, evenSeriesSum);

    return 0;
}
