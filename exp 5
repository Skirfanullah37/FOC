#include <stdio.h>

int calculateSeriesSum(int n) {
    int sum = 0, i;
    for (i = 1; i <= n; i++) {
        sum += i;
    }
    return sum;
}

int main() {
    int n;
    printf("Enter the value of n: ");
    scanf("%d", &n);

    int seriesSum = calculateSeriesSum(n);

    printf("Sum of the series 1 + 2 + 3 + ... + %d = %d\n", n, seriesSum);

    return 0;
}
